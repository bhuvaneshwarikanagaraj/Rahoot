{
  "version": 2,
  "builds": [
    {
      "src": "packages/web/package.json",
      "use": "@vercel/next"
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "/packages/web/$1"
    }
  ],
  "env": {
    "NEXT_PUBLIC_WEB_ORIGIN": "https://your-app-name.vercel.app"
  },
  "functions": {
    "packages/web/pages/api/**/*.js": {
      "maxDuration": 30
    }
  }
}